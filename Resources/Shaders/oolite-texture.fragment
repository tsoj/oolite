out vec4 out_color;

in VsOut
{
    vec2 texture_coordinate;
} vs_out;

uniform sampler2D image;

void main()
{
    vec3 pixel = texture(image, vs_out.texture_coordinate).rbg;
    float intensity = (pixel.r + pixel.g + pixel.b)/3.0;
    pixel = intensity * vec3(1.0);
    out_color = vec4(pixel, 1.0);
}
